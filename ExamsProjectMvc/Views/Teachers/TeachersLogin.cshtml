
@model ExamsProjectMvc.Models.LoginViewModel;
@{
    Layout = "_TeachersLayoutPage";
    ViewData["Title"] = "Login";
    ViewData["User"] = "Teacher";

}

<div class="row text-center">
    <div class="col">
        <h1>Exams Application</h1>
    </div>
</div>
<hr />
<div class="row">
    <div class="col">

            <partial name="_LoginForm" for=@Model view-data="ViewData"/>


        </div>
    </div>
</div>
@section Scripts
{
    @if (Model.IsAttempFailed)
    {
        <script>
    document.addEventListener("DOMContentLoaded", function (event) {
        alert('@(ViewData["errorMessage"] as string)');
    });
        </script>
    }
}


